<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileAppMauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MobileAppMauiApp1.Views">

    <FlyoutItem Title="Главная">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Компас">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:CompassPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="О Бней Ноах">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:AboutNoah}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="О программе">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:AboutProgram}" />
        </Tab>
    </FlyoutItem>
</Shell>
